<!DOCTYPE html>
<html>
  <head>
    <title>Emo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if flash[:notice] %>
      <div class="notice text-center text-blue">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if logged_in? %>
      <header class="nav">
        <div class="container">
          <nav class="navbar navbar-expand-lg navbar-expand-md navbar-expand-sm navbar-light bg-light text-center fixed-top">
            <div class="col-md-12 col-lg-12">
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="col-md-4 offset-md-1 col-lg-4 offset-lg-1">
                  <ul class="navbar-nav mr-auto">
                    <li class="nav-item mx-3 lx-3">
                      <%= link_to 'Home', tweets_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item mx-3 lx-3">
                      <%= link_to 'Emotion', emotions_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item mx-3 lx-3">
                      <%= link_to 'Ranking', rankings_path, class: "nav-link" %>
                    </li>
                  </ul>
                </div>
                <div class="col-md-2 col-lg-2">
                  <a class="navbar-brand" href="#">Emotch</a>
                </div>
                <div class="col-md-3 offset-md-0 col-lg-3 offset-lg-0">
                  <%= search_form_for @q, url: tweets_path, class: "form-inline my-2 my-lg-0" do |f| %>
                    <%= f.search_field :content_or_user_name_cont, class:"mr-sm-1 form-control col-md-6 col-lg-6" %>
                    <%= f.submit :class => "btn btn-outline-success" %>
                  <% end %>
                </div>
                <div class="col-md-1 col-lg-1">
                  <%= link_to user_path(current_user), method: :get, class:"nav-link" do %>
                    <%= image_tag(current_user.image, size: "32x32", class: "rounded-circle") %>
                  <% end %>
                </div>
                <%= link_to 'Logout', '/signout', class:"btn btn-outline-info" %>
              </div>
            </div>
          </nav>
        </div>
      </header>
    <% end %>
    <%= yield %>
    <footer>
      <div class="container text-center">
        <div class="row">
          <div class="col-md-10 offset-md-1">
            <p>Â© copyright Engineer Takuya 2019. All Rights Reserved.</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
