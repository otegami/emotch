<main class="tweet-index">
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2 mt-2">
        <div class="col-md-10 offset-md-1">
          <div class="micropost_form card">
            <%= render 'shared/tweet_form' %>
          </div>
          <% if @user.tweets.any? %>
            <%= render @tweets %>
          <% end %>
          <%= paginate @tweets %>
        </div>
      </div>
    </div>
  </div>
</main>
